{
  "name": "hypercerts",
  "description": "Scalable retrospective reward systems for impact",
  "version": "0.0.0",
  "author": "Hypercerts team",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "docs/",
    "frontend/"
  ],
  "scripts": {
    "build": "turbo run build && yarn copy:docs",
    "copy:docs": "mkdir -p ./frontend/out/docs/ && cp -r ./docs/build/* ./frontend/out/docs/",
    "dev:frontend": "turbo run dev --filter=frontend --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "^2.8.3",
    "turbo": "^1.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Network-Goods/hypercerts.git"
  }
}
